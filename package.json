{
  "name": "cera",
  "version": "0.3.0",
  "description": "CowTech Testing utilities.",
  "homepage": "https://sw.cowtech.it/cera",
  "repository": "github:ShogunPanda/cera",
  "keywords": [
    "jest",
    "jest-plugin"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/cera/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "main": "./lib/index.js",
  "typings": "./types/index.d.ts",
  "types": "./types/index.d.ts",
  "files": [
    "lib",
    "types",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.test.json -t stylish src/*.ts test/*.ts",
    "test": "jest test --coverage --coverageReporters=html --coverageReporters=text",
    "ci": "yarn lint",
    "prebuild": "rm -rf lib/* types/* && yarn lint",
    "build": "tsc -p .",
    "prepublishOnly": "yarn ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "jest": "^24.1.0"
  },
  "devDependencies": {
    "@cowtech/tslint-config": "^5.13.0",
    "@types/got": "^9.6.9",
    "@types/jest": "^24.0.23",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  }
}
